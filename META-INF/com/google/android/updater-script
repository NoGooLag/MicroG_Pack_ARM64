ui_print(" ");

ui_print(" Mounting /system...");
ifelse(is_mounted("/system"), unmount("/system"));
run_program("/sbin/busybox", "mount", "/system");

# Check CPU architecture
# Abort if not ARM
if is_substring("arm", concat(getprop(ro.product.cpu.abi), getprop(ro.product.cpu.abi2)))
then
	ui_print(" ");
	ui_print(" ARM CPU Architecture detected, proceeding...");
	ui_print(" ");
else
	abort(" CPU doesn't have an ARM architecture, aborting...");
	ui_print(" *******************************************");
endif;

ui_print(" Removing any conflicting apps...");

# GApps Packages
#
# App
delete_recursive(
	"/system/app/Books",
	"/system/app/CalculatorGooglePrebuilt",
	"/system/app/CalendarGooglePrebuilt",
	"/system/app/Chrome",
	"/system/app/CloudPrint2",
