# NoGooLag Packages
#
# App
delete_recursive(
	"/system/app/DejaVuLocationService",
	"/system/app/DroidGuard",
	"/system/app/GsfProxy",
	"/system/app/LocalGSMNLPBackend",
	"/system/app/LocalWiFiNLPBackend",
